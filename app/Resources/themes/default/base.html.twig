<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome to Alexandria!{% endblock %}</title>
    {% block stylesheets %}
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/themes/default/css/bootstrap.min.css">
    <link rel="stylesheet" href="/themes/default/css/bootstrap-responsive.min.css">
    <link rel="stylesheet" href="/themes/default/css/font-awesome.min.css">
    <link rel="stylesheet" href="/themes/default/css/style.css">
    <link rel="stylesheet" href="{{ asset('bundles/whiteoctoberpagerfanta/css/pagerfantaDefault.css') }}" type="text/css" media="all" />
    {% endblock %}
    {% block headjavascripts %}
    <!--[if IE 7]>
    <link rel="stylesheet" href="/themes/default/css/font-awesome-ie7.min.css">
    <![endif]-->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/js/bootstrap.min.js"></script>
    <!-- <script type="text/javascript" src="/js/jquery.fancybox-1.3.4.pack.js"></script> -->
   {% endblock %}
   <meta name="viewport" content="width=device-width, initial-scale=1.0">

<script>
$(function() {
    $("img").one("load", function() {
        $(this).show();
    }).each(function() {
        if (this.complete) $(this).load();
    }).error(function () {  
        $(this).unbind("error").attr("src", "/themes/default/images/nocover.jpg");
    })
});
</script>
  </head>
  <body data-spy="scroll" data-target=".bs-docs-sidebar">
    <!-- Navbar
    ================================================== -->
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span>links</span>
          </button>
          <a class="brand" href="/">Home</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="">
                <a href="{{ path('matuck_library_homepage') }}"><i class="icon-home icon-white"></i> Home</a>
              </li>
              <li class="">
                <a href="{{ path('matuck_library_search') }}"><i class="icon-search icon-white"></i> Search</a>
              </li>
              <li class="">
                <a href="{{ path('matuck_library_browse') }}"><i class="icon-book icon-white"></i> Browse</a>
              </li>
              <li class="">
                <a href="{{ path('matuck_library_page', {'template': 'faq'}) }}"><i class="icon-question-sign icon-white"></i> FAQs</a>
              </li>
              <li class="upload">
                <a href="{{ path('matuck_library_upload') }}"><i class="icon-upload icon-white"></i> Upload</a>
              </li>
              <li class="admin">
                <a href="#"><i class="icon-admin icon-white"></i> Admin</a>
              </li>
              <li class="donate">
                <a href="#"><span class="label label-success"><i class="icon-gift icon-white"></i> Donate</span></a>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <header class="jumbotron subhead" id="overview">
        <div class="container">
            <p class="lead">Alexandria - Ebook Library Management.</p>
        </div>
    </header>


  <div class="container">

        {% block body %}{% endblock %}
        
    
  </div>
    <!-- Footer
    ================================================== -->
    <footer class="footer">
            <p>This website is powered by <a href="https://github.com/matuck/Alexandria">Alexandria</a></p>
      </div>
    </footer>
{% block javascripts %}
{% endblock %}
  </body>
</html>
