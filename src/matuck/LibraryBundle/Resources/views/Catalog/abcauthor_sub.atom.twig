{% extends 'matuckLibraryBundle:Catalog:layout.atom.twig' %}
{% block links %}
  <link rel="self"  
        href="{{ path('matuck_library_catalog_author') }}" 
        type="application/atom+xml;profile=opds-catalog;kind=navigation"/>
  <link rel="start" 
        href="{{ path('matuck_library_catalog') }}" 
        type="application/atom+xml;profile=opds-catalog;kind=navigation"/>
  <link rel="up" 
        href="{{ path('matuck_library_catalog') }}" 
        type="application/atom+xml;profile=opds-catalog;kind=navigation"/>
{% endblock %}
  {% block id %}<id>tag:{{ path('matuck_library_catalog_author') }}</id>{% endblock %}
  {% block entries %}
      <entry>
        <title>All {{ letter|capitalize }}</title>
        <link rel="http://opds-spec.org/sort/new" 
              href="{{ path('matuck_library_catalog_authorletter', {'letter': letter}) }}"
              type="application/atom+xml;profile=opds-catalog;kind=acquisition"/>
        <updated>2012-01-09T22:41:00Z</updated>
        <id>catalog_author_{{letter}}</id>
        <content type="text">Authors starting with the letter {{ letter|capitalize }}</content>
      </entry>
  {% for subletter in range('a', 'z') %}
{% include 'matuckLibraryBundle:Catalog:letterentry.atom.twig' with {'route': 'matuck_library_catalog_authorletter', 'letter': [letter, subletter]|join } %}
  {% endfor %}
  {% endblock %}