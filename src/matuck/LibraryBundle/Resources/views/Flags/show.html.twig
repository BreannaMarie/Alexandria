{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Flags</h1>
    {% include '::flashmessage.html.twig' %}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Book</th>
                <td><a href="{{ path('matuck_library_book_show', { 'id': entity.getBook().id }) }}">{{ entity.getBook().getTitle() }}</a></td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Complete</th>
                <td>{{ entity.complete }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('matuck_library_flags') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('matuck_library_flags_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{ path('matuck_library_flags_delete', { 'id': entity.id, 'redirect': 'flags' }) }}">Delete</a>
    </li>
</ul>
{% endblock %}
